doctype html

block vars
include ../components/_mixins

html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description" content="")
		meta(name="keywords" content="")
		meta(property="og:image" content="images/logo.svg")
		meta(name="format-detection" content="telephone=no")
		-
			var date=new Date();
			var str=''+date.getFullYear()+date.getMonth()+date.getDate()+date.getHours()+date.getMinutes()+date.getSeconds()+date.getMilliseconds();

		link(href="css/main.css?"+str rel="stylesheet")
		//title= `${page.title}`

	body
		block header
			include ../partials/_header

		main.main
			block main

			block footer
				include ../partials/_footer

		block modals


		script(src="js/main.js?"+str)

		block scripts
